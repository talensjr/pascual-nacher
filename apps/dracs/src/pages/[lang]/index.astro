---
import { Image } from "astro:assets";
import { ViewTransitions } from "astro:transitions";
import dracsLogo from "../_assets/dracs-logo.webp";
import "~/styles/base.css";
import { getCollection } from "astro:content";
import { languages } from "~/i18n/languages";

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

const allPosts = await getCollection("blog");

const posts = allPosts
  .map((post) => ({
    ...post,
    slug: post.slug.split("/").pop(),
  }))
  .filter((post) => post.data.lang === Astro.params.lang);
---

<html lang={Astro.params.lang}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>Astro</title>
  </head>
  <body>
    <div class="bg-primary text-secondary px-4 min-h-[100dvh] flex flex-col">
      <header class="h-10 flex gap-4 items-center">
        <Image src={dracsLogo} alt="" class="h-full w-auto" />
        <div>Dracs</div>
      </header>

      <main class="flex-1">
        <h1>Hello!</h1>
        <ul>
          {
            posts.map((post) => {
              return (
                <li>
                  <a href={`/${Astro.params.lang}/blog/${post.slug}`}>
                    {post.data.title}
                  </a>
                </li>
              );
            })
          }
        </ul>
      </main>
      <footer>
        <h2>I am the footer</h2>
      </footer>
    </div>
  </body>
</html>
